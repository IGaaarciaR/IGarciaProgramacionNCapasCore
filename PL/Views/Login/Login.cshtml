@model ML.Usuario
@{
    ViewData["Title"] = "Login";
    Layout = "";
}
<!DOCTYPE html>
<html lang ="en">
<head>
    <link rel="stylesheet" href="~/css/LoginSheet.css" href="styles.css">
    @*<script src="~/js/Login.js"></script>*@

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">

        
</head>

@*<nav class="navbar navbar-light bg-light">
    <a class="navbar-brand" href="#">Navbar</a>
</nav>*@
    <body>

    @*@if (User.Identity.IsAuthenticated)
    {
        <ul class="nav navbar-nav">
            <li>@Html.ActionLink("Home", "Index", "Home")</li>
        </ul>
    }*@

        <!-- Section: Design Block -->
        <section class="text-center">
            <!-- Background image -->
            <div class="p-5 bg-image" style="
        background-image: url('https://mdbootstrap.com/img/new/textures/full/171.jpg');
        height: 300px;
        "></div>
            <!-- Background image -->

            <div class="card mx-4 mx-md-5 shadow-5-strong" style="
        margin-top: -100px;
        background: hsla(0, 0%, 100%, 0.8);
        backdrop-filter: blur(30px);
        ">

                <div class="card-body  cardbody-color py-5 px-md-5">
                    @using (Html.BeginForm("Login", "Login", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        <div class="row d-flex justify-content-center">
                            <div class="text-center">
                                <img src="https://cdn.pixabay.com/photo/2016/03/31/19/56/avatar-1295397__340.png" class="img-fluid profile-image-pic img-thumbnail rounded-circle my-3"
                                 width="200px" alt="profile">
                            </div>
                            <div class="col-lg-8">
                                <h2 class="fw-bold mb-5">Iniciar sesión</h2>
                                <form>
                                    <!-- 2 column grid layout with text inputs for the first and last names -->
                                    <!-- username input -->
                                    <div class="form-outline mb-4">
                                        @*<input type="email" id="form3Example3" class="form-control" />*@
                                        @Html.LabelFor(model => model.UserName)
                                        @*<label class="form-label" for="form3Example3">Username</label>*@
                                        <div class="input-group">
                                            @Html.TextBoxFor(model => model.UserName, new { @class = "form-control" , @id = "Username" , @placeholder = "Usuario"})

                                            <span class="input-group-text"><i class="bi bi-person-circle"></i></span>

                                        </div>
                                    </div>

                                        <!-- Password input bi bi-eye-fill-->
                                    <div class="form-outline mb-4">
                                    @*<input type="password" id="form3Example4" class="form-control" placeholder="Contraseña" />*@
                                        @Html.LabelFor(model => model.Password)
                                            <div class="input-group">
                                            @Html.PasswordFor(model => model.Password, new { @class = "form-control" , @id = "Password" , @placeholder = "contraseña"})
                                                    <span class="input-group-btn">
                                                        <button id="verPassword" class="btn btn-default" type="button">
                                                                <i class="bi bi-eye-fill"></i>
                                                        </button>
                                                    </span>
                                            </div>
                                    </div>

                                    <!-- Checkbox -->
                                    <div class="form-check d-flex justify-content-center mb-4">
                                        <input class="form-check-input me-2" type="checkbox" value="" id="form2Example33" checked />
                                        <label class="form-check-label" for="form2Example33">
                                            Recordarme
                                        </label>
                                    </div>

                                    <!-- Submit button -->
                                    @*<button type="submit" class="btn btn-primary btn-block mb-4">
                                Iniciar Sesión
                                </button>*@

                                    <button type="submit" class="btn btn-primary btn-block mb-4">
                                        Iniciar Sesión
                                    </button>

                                    <!-- Register buttons -->
                                    <div class="text-center">
                                        <p>or sign up with:</p>
                                        <button type="button" class="btn btn-link btn-floating mx-1">
                                            <i class="fab fa-facebook-f"></i>
                                        </button>

                                        <button type="button" class="btn btn-link btn-floating mx-1">
                                            <i class="fab fa-google"></i>
                                        </button>

                                        <button type="button" class="btn btn-link btn-floating mx-1">
                                            <i class="fab fa-twitter"></i>
                                        </button>

                                        <button type="button" class="btn btn-link btn-floating mx-1">
                                            <i class="fab fa-github"></i>
                                        </button>
                                    </div>
                                </form>
                            </div>

                        </div>
                    }
                </div>
            </div>
        </section>

    </body>
</html>

@section scripts {
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script>
        $('#verPassword').on('mousedown', function () {
            $('#Password').attr("type", "text");
        });

        $('#verPassword').on('mouseup mouseleave', function () {
            $('#Password').attr("type", "password");
        });
    </script>
}
    <!-- Section: Design Block -->